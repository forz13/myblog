{% block body %}
    <div class="about">
        <div class="container">
            <div class="about-main">
                <div class="col-md-8 about-left">
                    {% if blogs[0] is defined %}
                        <div class="about-two">
                            <h2>
                                <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blogs[0].id }) }}">{{ blogs[0].title }}</a>
                            </h2>
                            {% if blogs[0].image is defined %}
                                <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blogs[0].id }) }}"><img
                                            src="{{ asset(['images/', blogs[0].image]|join) }}"/></a>
                            {% endif %}
                            {{ blogs[0].blog(500) | raw }}
                            <p>Posted by {{ blogs[0].author }} on {{ blogs[0].created|date('h:iA') }}
                                comments({{ blogs[0].comments|length }})</p>
                            <div class="about-btn">
                                <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blogs[0].id }) }}">Read More</a>
                            </div>
                            <ul>
                                <li><p>Share : </p></li>
                                <li><a href="#"><span class="fb"> </span></a></li>
                                <li><a href="#"><span class="twit"> </span></a></li>
                                <li><a href="#"><span class="pin"> </span></a></li>
                                <li><a href="#"><span class="rss"> </span></a></li>
                                <li><a href="#"><span class="drbl"> </span></a></li>
                            </ul>
                        </div>
                    {% endif %}
                    {% set popBlog=blogs|slice(1) %}
                    <div class="about-tre">
                        {% for  blogMinilist in popBlog|batch(2) %}
                            <div class="a-1">
                                {% for blog in blogMinilist %}
                                    <div class="col-md-6 abt-left">
                                        {% if blog.image is defined %}
                                            <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blog.id }) }}"><img
                                                        src="{{ asset(['images/', blog.image]|join) }}" alt=""/></a>
                                        {% endif %}
                                        <h3>
                                            <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blog.id }) }}">{{ blog.title }}</a>
                                        </h3>
                                        <p>{{ blog.blog(100) | raw }}</p>
                                        <label>Posted by {{ blog.author }} on {{ blog.created|date('h:iA') }}
                                            comments({{ blog.comments|length }})</label>
                                        <div class="about-btn">
                                            <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blogs[0].id }) }}">Read More</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-4 about-right heading">
                    <div class="abt-1">
                        <h3>CATEGORIES</h3>
                    </div>
                    <div class="abt-2">
                        <h3>MOST COMMENTED</h3>
                        <div class="might-grid">
                            <div class="grid-might">
                                <a href="single.html"><img src="images/c-12.jpg" class="img-responsive" alt=""> </a>
                            </div>
                            <div class="might-top">
                                <h4><a href="single.html">Duis consectetur gravida</a></h4>
                                <p>Nullam non magna lobortis, faucibus erat eu, consequat justo. Suspendisse commodo
                                    nibh odio.</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="might-grid">
                            <div class="grid-might">
                                <a href="single.html"><img src="images/c-10.jpg" class="img-responsive" alt=""> </a>
                            </div>
                            <div class="might-top">
                                <h4><a href="single.html">Duis consectetur gravida</a></h4>
                                <p> Nullam non magna lobortis, faucibus erat eu, consequat justo. Suspendisse commodo
                                    nibh odio.</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="might-grid">
                            <div class="grid-might">
                                <a href="single.html"><img src="images/c-11.jpg" class="img-responsive" alt=""> </a>
                            </div>
                            <div class="might-top">
                                <h4><a href="single.html">Duis consectetur gravida</a></h4>
                                <p> Nullam non magna lobortis, faucibus erat eu, consequat justo. Suspendisse commodo
                                    nibh odio.</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="abt-2">
                        <h3>ARCHIVES</h3>
                        <ul>
                            {% for blog in blogs|reverse %}
                                <li>
                                    <a href="{{ path('BloggerBlogBundle_blog_show', { 'id': blog.id }) }}">{{ blog.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}